html
	head
		title Lisa's Books -- Add books
		include ../static/pug/head-tags.pug

	body
		include ../static/pug/header.pug
		include ../static/pug/navbar.pug
		if user
			#add-page
				#add-books
					h1 Add a book to the bookshelf
					form(action="/addbooks" method="post")
						p Author:
						label(for="firstname") First name
						br
						input#firstname(type="text" name="authorfirstname")
						br
						label(for="lastname") Last name
						br
						input#lastname(type="text" name="authorlastname") 
						p Title:
						input(type="text" name="title")
						p Genre:
						input(type="text" name="genre")
						p Language:
						input(type="text" name="language")
						p Last read:
						input(type="text" name="lastread")
						br
						input(type="submit" value="Add" class="input-button")
				#add-wishlist
					h1 Add a book to the wishlist
					form(action="/wishlist" method="post")
						p Title:
						input(type="text" name="titlewish")
						p Author:
						label(for="firstname") First name
						br
						input#firstname(type="text" name="authorfirstnamewish")
						br
						label(for="lastname") Last name
						br
						input#lastname(type="text" name="authorlastnamewish") 
						p Language:
						input(type="text" name="languagewish")
						p Price:
						input(type="text" name="pricewish")
						br
						input(type="submit" value="Add" class="input-button")
		include ../static/pug/footer.pug
